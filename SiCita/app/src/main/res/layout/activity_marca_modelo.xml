        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <Button
        android:id="@+id/idibtnborrarmarca"
        android:layout_width="128dp"
        android:layout_height="42dp"
        android:layout_marginStart="263dp"
        android:layout_marginEnd="20dp"
        android:onClick="Borrar"
        android:text="@string/borrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idbtnactualizarmarca" />

    <ImageButton
        android:id="@+id/idbtnaddlinmarca"
        android:layout_width="47dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/idbtndellinmarca"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintStart_toEndOf="@+id/idtxtmarca"
        app:layout_constraintTop_toBottomOf="@+id/imageView14"
        app:srcCompat="@android:drawable/ic_input_add" />


    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="132dp"
        android:layout_height="42dp"
        android:contentDescription="@string/LoginUsuario"
        app:srcCompat="@drawable/logo_car"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/idbtndellinmarca"
        android:layout_width="47dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView14"
        app:srcCompat="@android:drawable/ic_delete" />

    <TableLayout
